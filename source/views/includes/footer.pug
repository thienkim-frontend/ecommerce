mixin footer-menu(heading, content, isInstagram) 
  .widget&attributes(attributes)
    h5.widget-title!= heading
    .separator
    .widget-content
      if (isInstagram)
        +instagram(content)
      else
        +simpleMenu(content).unordered-list

mixin simpleMenu(arr)
  ul&attributes(attributes)
    each val in arr
      li: a(href="#")= val      
mixin instagram(arr)
  ul&attributes(attributes)
    each val in arr
      li 
        a(href="#"): img(src="images/" + val , alt="") 
